@model IEnumerable<cho500.Models.ChildRecords.ChildBirthHistoryIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table table-striped table-hover">
    <tr>
        <th>@Html.DisplayNameFor(model => model.PatientName)</th>
        <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
        <th>@Html.DisplayNameFor(model => model.TypeOfDelivery)</th>
        <th>@Html.DisplayNameFor(model => model.BirthWeightInPounds)</th>
        <th>@Html.DisplayNameFor(model => model.BirthLength)</th>
        <th>@Html.DisplayNameFor(model => model.HeadCircumference)</th>
        <th>@Html.DisplayNameFor(model => model.ChestCircumference)</th>
        <th>@Html.DisplayNameFor(model => model.AbdominalCircumference)</th>
        @*<th>@Html.DisplayNameFor(model => model.BloodType)</th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
            <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
            <td>@Html.DisplayFor(modelItem => item.TypeOfDelivery)</td>
            <td>@Html.DisplayFor(modelItem => item.BirthWeightInPounds)</td>
            <td>@Html.DisplayFor(modelItem => item.BirthLength)</td>
            <td>@Html.DisplayFor(modelItem => item.HeadCircumference)</td>
            <td>@Html.DisplayFor(modelItem => item.ChestCircumference)</td>
            <td>@Html.DisplayFor(modelItem => item.AbdominalCircumference)</td>
            @*<td>@Html.DisplayFor(modelItem => item.BloodType)</td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, PatientId = item.PatientId, PatientName = item.PatientName, BirthDate = item.BirthDate }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
