@model IEnumerable<cho500.Models.ChildRecords.ChildImmunizationRecordViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Immunization List</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.VaccineName)</th>
        <th>@Html.DisplayNameFor(model => model.First)</th>
        <th>@Html.DisplayNameFor(model => model.Second)</th>
        <th>@Html.DisplayNameFor(model => model.Third)</th>
        <th>@Html.DisplayNameFor(model => model.Booster1)</th>
        <th>@Html.DisplayNameFor(model => model.Booster2)</th>
        <th>@Html.DisplayNameFor(model => model.Booster3)</th>
        <th>@Html.DisplayNameFor(model => model.Reaction)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.ActionLink(item.Name, "Details", "ChildRecord", new { Id = item.PersonID }, null)</td>
        @*<td>@Html.DisplayFor(modelItem => item.Name)</td>*@
        <td>@Html.DisplayFor(modelItem => item.VaccineName)</td>
        <td>@Html.DisplayFor(modelItem => item.First)</td>
        <td>@Html.DisplayFor(modelItem => item.Second)</td>
        <td>@Html.DisplayFor(modelItem => item.Third)</td>
        <td>@Html.DisplayFor(modelItem => item.Booster1)</td>
        <td>@Html.DisplayFor(modelItem => item.Booster2)</td>
        <td>@Html.DisplayFor(modelItem => item.Booster3)</td>
        <td>@Html.DisplayFor(modelItem => item.Reaction)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
